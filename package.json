    "cpy": "^11.1.0",
    "esbuild": "^0.25.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "marked": "^15.0.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
